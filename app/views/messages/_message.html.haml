.message-field__box{data: {message: {id: message.id}}}
  .message-field__box__info
    .message-field__box__info__user-name
      = message.user.name
    .message-field__box__info__date
      = message.created_at.strftime("%Y年%m月%d日 %H時%M分")
  .message
    - if message.content.present?
      %p.message__content  
        = message.content
    = image_tag message.image.url, class: 'message-field__box__message__content' if message.image.present?

